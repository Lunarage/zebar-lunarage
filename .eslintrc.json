{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-key": [
            "error",
            {
                "warnOnDuplicates": true
            }
        ],
        "react/no-array-index-key": [
            "warn"
        ],
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "singleQuote": true
            }
        ],
        "no-plusplus": "off",
        "max-len": "off",
        "import/no-extraneous-dependencies": "off",
        "react/require-default-props": [
            2,
            {
                "functions": "defaultArguments"
            }
        ]
    }
}
